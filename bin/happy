#!/bin/sh
# Happy CLI launcher script for Unix-like systems (including WSL2)

# Get the real path of this script (resolves symlinks)
SCRIPT_REAL_PATH="$(readlink -f "$0" 2>/dev/null || realpath "$0" 2>/dev/null || echo "$0")"

# Get the directory where the real script is located
SCRIPT_DIR="$(cd "$(dirname "$SCRIPT_REAL_PATH")" && pwd)"

# Navigate to the package root (one level up from bin/)
PACKAGE_ROOT="$SCRIPT_DIR/.."

# Execute node with the appropriate flags and the main module
exec node --no-warnings --no-deprecation "$PACKAGE_ROOT/dist/index.mjs" "$@"